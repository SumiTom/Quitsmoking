<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:id="@+id/action_home"
    tools:context=".HomeActivity"
    android:clickable="false"
    android:transitionGroup="false"
    android:background="#ff8c9ab4">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/usericon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:src="@android:color/holo_blue_light"

       />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/username"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:phoneNumber="false"
        android:gravity="center"
        android:layout_alignTop="@+id/usericon"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/totalcount"
        android:layout_alignBottom="@+id/usericon"
        android:layout_alignEnd="@+id/friendlist"
        android:layout_toEndOf="@+id/imageButtonTabacco" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/usericon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/level3"
        android:layout_marginLeft="5dp"
        android:visibility="invisible" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/friendlist"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_above="@+id/imageButton5"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_alignParentStart="false" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/shareOnFacebook"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/com_facebook_button_like_icon" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@android:drawable/ic_menu_set_as"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:id="@+id/imageButtonTabacco"
        android:background="#00FFFFFF"
        android:src="@drawable/cigar1"
        android:layout_below="@+id/imageView"
        android:layout_alignEnd="@+id/usericon" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="/ æœ¬"
        android:id="@+id/tabaccoToday"
        android:layout_above="@+id/imageButton"
        android:gravity="center"
        android:layout_alignEnd="@+id/shareOnFacebook" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="110dp"
        android:id="@+id/imageButton2"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cigar1"
        android:layout_toEndOf="@+id/imageButtonTabacco"
        android:background="#00FFFFFF" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="130dp"
        android:id="@+id/imageButton3"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton2"
        android:src="@drawable/cigar1"
        android:background="#00FFFFFF" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="110dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/cigar1"
        android:background="#00FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton3" />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton5"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton4"
        android:src="@drawable/cigar1"
        android:background="#00FFFFFF" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/imageView3"
        android:src="@drawable/level4"
        android:layout_marginLeft="5dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignStart="@+id/imageView"
        android:visibility="invisible" />

</RelativeLayout>