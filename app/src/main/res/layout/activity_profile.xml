<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity"
    android:background="#ff8c9ab5">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Q.1 : 一日の平均喫煙本数は？"
        android:id="@+id/question1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/question1"
        android:layout_alignParentStart="true"
        android:width="70dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Q.2 : たばこを吸い始めて、何ヶ月ですか？"
        android:id="@+id/question2"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/question2"
        android:layout_alignParentStart="true"
        android:width="70dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Q.3 : 一日の目標本数は？"
        android:id="@+id/question3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/question3"
        android:layout_alignParentStart="true"
        android:width="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登録"
        android:id="@+id/button"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_alignTop="@+id/editText"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ヶ月"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/question2"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toEndOf="@+id/editText3"
        android:layout_below="@+id/question3"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Data"
        android:id="@+id/message"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:width="300dp"
        android:height="50dp"
        android:gravity="center"
        android:layout_alignEnd="@+id/question3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/message"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/message"
        android:height="50dp"
        android:gravity="center"/>
</RelativeLayout>